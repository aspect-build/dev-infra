load("//tools:defaults.bzl", "jasmine_node_test", "ts_library")
load("//tools:toolchain_info.bzl", "TOOLCHAINS_NAMES", "TOOLCHAINS_VERSIONS")

exports_files([
    "build-worker.ts",
])

ts_library(
    name = "build",
    srcs = glob(
        [
            "**/*.ts",
        ],
        exclude = ["*.spec.ts"],
    ),
    visibility = ["//ng-dev:__subpackages__"],
    deps = [
        "//ng-dev/release/config",
        "//ng-dev/utils",
        "@npm//@types/node",
        "@npm//@types/yargs",
    ],
)

ts_library(
    name = "test_lib",
    testonly = True,
    srcs = glob([
        "*.spec.ts",
    ]),
    deps = [
        ":build",
        "//ng-dev/release/config",
        "//ng-dev/utils",
    ],
)

[
    jasmine_node_test(
        name = "test_" + toolchain_name,
        specs = [":test_lib"],
        toolchain = toolchain,
    )
    for toolchain_name, toolchain in zip(
        TOOLCHAINS_NAMES,
        TOOLCHAINS_VERSIONS,
    )
]
